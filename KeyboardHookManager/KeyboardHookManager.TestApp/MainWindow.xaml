<Window x:Class="KeyboardHookManager.TestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeyboardHookManager.TestApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Keyboard">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBlock Name="KeyboardLog"></TextBlock>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Mouse">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBlock Name="MouseLog"></TextBlock>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
